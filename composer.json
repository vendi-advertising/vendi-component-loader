{
    "name": "vendi-advertising/vendi-component-loader",
    "description": "Folder-based template loader for WordPress",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Chris Haas",
            "email": "chris@vendiadvertising.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "symfony/filesystem": "^6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7|^8|^9",
        "mikey179/vfsstream": "^1.6"

    },
    "config": {
        "optimize-autoloader": true
    },
    "autoload": {
        "psr-4": {
            "Vendi\\Shared\\WordPress\\ComponentLoader\\": "src/"
        },
        "files": [
            "includes/Functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Vendi\\Shared\\WordPress\\ComponentLoader\\Tests\\": "tests/"
        }
    }
}
