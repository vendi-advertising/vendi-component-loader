{
    "name": "vendi-advertising/vendi-component-loader",
    "description": "Folder-based template loader for WordPress",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Chris Haas",
            "email": "chris@vendiadvertising.com"
        }
    ],
    "require": {
        "php": ">=7.1",
        "symfony/filesystem": "^6.0"
    },
    "require-dev": {
        "symfony/var-dumper": "^4|^5|^6"
    },
    "config": {
        "optimize-autoloader": true
    },
    "autoload": {
        "psr-4": {
            "Vendi\\Shared\\WordPress\\": "src/"
        },
        "files": [
            "includes/Functions.php"
        ]
    }
}
